<h1 class="country__title">{{name}}</h1>
<div class="country__container">
<h2 class="country__name">{{name}}</h2>
<p class="country__capital">Capital: {{capital}}</p>
<p class="country__population">Population: {{population}}</p>
<p class="country__languages">Language:</p>
{{#each languages}}
  <li class="country__language">{{name}}</li>
{{/each}}
<div class="country__image-container">
<img class="country__image" src="{{flag}}" alt="{{name}}" />
</div>
</div>